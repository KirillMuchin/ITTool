@using Microsoft.AspNetCore.Identity

@{
    Layout = "_LayoutPortal";
}

<section class="portal__main">
    <div class="portal__main-header">
        <h3 class="main__header-hello">Hello, @User.Identity.Name</h3>
        <img src="" alt="" class="main__header-notification">
    </div>
    <div class="main__inner">
        <div class="main__inner-left">
            <h1 class="main__header">
                What are you going to improve today?
            </h1>
            <div class="splide main__courusel">
                <div class="splide__track">
                    <ul class="splide__list">
                        <li class="splide__slide"></li>
                        <li class="splide__slide"></li>
                        <li class="splide__slide"></li>
                    </ul>
                </div>
            </div>
            <div class="main__soc">
                <h1 class="main__soc-header">Community</h1>
                <div class="main__soc-inner">
                    <div class="main__soc-item">
                        <img src="~/img/main__soc-top.svg" alt="" class="soc__item_img">
                        <p class="soc__item-header">
                            Student's achievement rating
                        </p>
                    </div>
                    <div class="main__soc-item">
                        <img src="~/img/main__soc-active.svg" alt="" class="soc__item_img">
                        <p class="soc__item-header">
                            Student's activity rating
                        </p>
                    </div>
                    <div class="main__soc-item">
                        <img src="~/img/main__soc-forum.svg" alt="" class="soc__item_img">
                        <p class="soc__item-header">
                            Community forum
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="main__inner-right">
            <div class="main__exercise">
                <h1 class="main__exercise-headedr">New lessons</h1>
                <div class="main__exercise-content"></div>
            </div>
            <div class="main__statistic">
                <h1 class="main__statistic-header">Course's statistics</h1>
                <div class="main__statistic-content"></div>
            </div>
        </div>
    </div>
</section>

